package com.cati.java.modulo3;

public class Mario03 {
	public String nome;
    private double altura;
    protected int idade;

    public void caracteristica() {
    	System.out.println("Seu nome " + this.nome);
    	System.out.println("Sua altura " + this.altura);
    	System.out.println("Sua idade " + this.idade);
    }
 
     public void poderes() {
    	System.out.println("Velocidade, salto, for√ßa.");
    }

	
	}
  
  
  package com.cati.java.modulo3;

public class MarioExecutar {

	public static void main(String[] args) {
		Mario03 bross = new Mario03();
		bross.altura = 1.56;
		bross.nome = "Mario Bross";
		bross.idade = 54;
		
		
		bross.caracteristica();
		bross.poderes();
	}


	}
